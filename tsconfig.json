{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitReturns": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src/*",
    "src/abi/**/*.json"
  ],
  "exclude": [
    "src/abi/types/factories/*",
  ]
}